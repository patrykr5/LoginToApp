<Window x:Class="LoginToApp.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginToApp"
        mc:Ignorable="d"
        Title="LoginScreen" Height="450" Width="800" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="tb_Login" HorizontalAlignment="Left" Height="23" Margin="367,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lb_Login" Content="Login:" HorizontalAlignment="Left" Margin="283,105,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.686,1.679"/>
        <Label x:Name="lb_Password" Content="Password:" HorizontalAlignment="Left" Margin="283,144,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="pb_Password" HorizontalAlignment="Left" Margin="367,147,0,0" VerticalAlignment="Top" Width="120" Height="23" RenderTransformOrigin="0.664,0.496"/>
        <Button x:Name="btn_Login" Content="Login" HorizontalAlignment="Left" Margin="397,193,0,0" VerticalAlignment="Top" Width="60" Height="23" Click="btn_Login_Click"/>

    </Grid>
</Window>
